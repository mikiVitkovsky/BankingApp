<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <LinearLayout
        android:layout_width="306dp"
        android:layout_height="329dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_email_view_user_dialog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_fullname_view_user_dialog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_id_view_user_dialog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_username_view_user_dialog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="TextView" />

        <Button
            android:id="@+id/btn_delete_view_user_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="delete user" />

        <Button
            android:id="@+id/btn_cancel_view_user_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="exit" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
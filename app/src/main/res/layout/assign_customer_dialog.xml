<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="242dp">

        <TextView
            android:id="@+id/txt_fullName_customer_assign_dialog"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_email_customer_assign_dialog"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_username_customer_assign_dialog"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="TextView" />

        <Button
            android:id="@+id/btn_assign_profile_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="assign" />

        <Button
            android:id="@+id/btn_cancel_profile_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cancel" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
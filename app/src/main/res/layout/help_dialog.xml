<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edt_complaint_help_dialog"
        android:layout_width="264dp"
        android:layout_height="112dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="74dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Write your complaint here and we'll return to you shortly."
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cancel_help_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="76dp"
        android:text="cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_send_help_dialog"
        app:layout_constraintTop_toBottomOf="@+id/edt_complaint_help_dialog" />

    <Button
        android:id="@+id/btn_send_help_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:text="send"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel_help_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_complaint_help_dialog" />
</androidx.constraintlayout.widget.ConstraintLayout>